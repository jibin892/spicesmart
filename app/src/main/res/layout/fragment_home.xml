<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/swiping"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:shimmer="schemas.android.com/tools"
    android:background="?attr/backgroundColorApp"
    android:fillViewport="true"
    tools:ignore="NamespaceTypo">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:id="@+id/nsv3"
        android:background="?attr/backgroundColorApp"
        android:fillViewport="true"
        tools:ignore="NamespaceTypo">


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColorApp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="6dp">


         <androidx.cardview.widget.CardView
             android:id="@+id/locationfindinglayout"
             android:layout_width="match_parent"
             android:layout_height="169dp"
             app:cardBackgroundColor="?attr/cardview"
             app:cardCornerRadius="6dp"
             app:cardElevation="3dp"
             app:cardUseCompatPadding="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginBottom="2dp"
                  android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:padding="12dp">


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="14dp"
                         android:layout_marginTop="24dp"
                         android:layout_marginEnd="24dp"
                         android:fontFamily="@font/poppins_bold"
                         android:text="Current Location"
                         android:textColor="?attr/textcolour"
                         android:textSize="20sp"
                         android:textStyle="bold" />

                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:layout_marginStart="14dp"
                         android:layout_marginTop="@dimen/padding_10"
                         android:src="@drawable/location"
                         app:tint="@color/green_A700" />

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/locationtext"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginStart="@dimen/padding_10"
                             android:layout_marginTop="@dimen/padding_10"
                             android:fontFamily="@font/poppins_semibold"
                             android:singleLine="true"
                             android:text="Choose your top genres from below list"
                             android:textColor="?attr/textcolour"
                             android:textSize="14sp" />

                     </LinearLayout>

                 </LinearLayout>

             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="2dp"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:padding="12dp"
             android:weightSum="3">

             <LinearLayout
                 android:id="@+id/boyshostel"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:background="?attr/backgroundColorApp"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/boy"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Boys Hostel"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/gerilshostel"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/gerils"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Girls Hostel"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/homestay"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/stayhome"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Home Stay"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="2dp"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:padding="12dp"
             android:weightSum="3">

             <LinearLayout
                 android:id="@+id/lowbudget"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:background="?attr/backgroundColorApp"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/low"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Low Budget"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/mediumbudget"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/medium"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Medium Budget"
                     android:singleLine="true"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/premium"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:padding="8dp">

                 <ImageView
                     android:layout_width="59dp"
                     android:layout_height="58dp"
                     android:layout_margin="4dp"
                     android:background="@drawable/background_circle"
                     android:padding="12dp"
                     android:src="@drawable/premium"
                     app:tint="?attr/iconcolour" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginStart="4dp"
                     android:layout_marginTop="8dp"
                     android:layout_marginEnd="4dp"
                     android:layout_marginBottom="4dp"
                     android:fontFamily="@font/poppins_semibold"
                     android:text="Premium"
                     android:textColor="?attr/textcolour"
                     android:textSize="14sp" />

             </LinearLayout>


         </LinearLayout>


         <LinearLayout
             android:id="@+id/seek_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="24dp"
             android:orientation="vertical">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="start"
                 android:text="Choose Your Budget"
                 android:layout_marginStart="@dimen/_27sdp"
                 android:fontFamily="@font/poppins_bold"
                  android:textColor="?attr/textcolour"
                 android:textSize="20sp"
                 android:textStyle="bold" />

             <SeekBar
                 android:id="@+id/seek1"
                 style="@style/Widget.AppCompat.SeekBar"
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:layout_marginTop="16dp"
                 android:backgroundTint="@color/colorAccent"
                 android:min="1000"
                 android:max="20000"
                 android:progress="40"
                 android:progressTint="@color/colorAccent"
                 android:thumbTint="@color/colorAccent" />
             <LinearLayout
                  android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:layout_gravity="center"
                 android:orientation="vertical">

                 <TextView
                     android:id="@+id/rangeammount"
                     android:layout_width="117dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginTop="5dp"
                      android:background="@drawable/textview"
                     android:fontFamily="@font/poppins_semibold"
                     android:gravity="center"
                     android:padding="5dp"
                     android:text="Range"
                     android:visibility="gone"
                     android:textColor="?attr/textcolour"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <Button
                     android:id="@+id/rangebutton"
                     android:layout_width="347dp"
                     android:layout_height="wrap_content"
                      android:background="@drawable/button"
                      android:padding="@dimen/_50sdp"

                     android:paddingBottom="@dimen/_27sdp"
                     android:layout_gravity="center"
                     android:layout_marginTop="@dimen/_27sdp"
                     android:textAllCaps="false"
                     android:textColor="@color/white"
                     android:textSize="16sp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

             </LinearLayout>
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColorApp"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Nearest"
                android:textColor="?attr/textcolour"
                android:textSize="26sp"
                android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins"
                android:textColor="?attr/textcolour"
                android:text="Choose your top genres from below list"
                android:textSize="14sp" />

    <TextView
        android:id="@+id/popularviewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/colorAccent"
        android:text="View All"
        android:textStyle="bold"
        android:textSize="10sp" />
</LinearLayout>
             <RelativeLayout
                 android:layout_width="match_parent"
                  android:layout_height="206dp">


                 <com.facebook.shimmer.ShimmerFrameLayout
                     android:id="@+id/popular_shimer"
                     android:layout_width="wrap_content"
                     android:layout_height="206dp"
                     android:layout_gravity="center"
                     android:orientation="vertical"
                     android:background="?attr/backgroundColorApp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"

                     shimmer:duration="800">

                     <!-- Adding 3 rows of placeholders -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <include layout="@layout/shimer" />

                         <include layout="@layout/shimer" />
                         <include layout="@layout/shimer" />

                         <!--                                <include layout="@layout/shimer" />-->






                     </LinearLayout>

                 </com.facebook.shimmer.ShimmerFrameLayout>


                 <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/popular"
                     android:layout_width="wrap_content"
                     android:layout_height="206dp"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentTop="true"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentBottom="true"
                     android:layout_marginStart="0dp"
                     android:layout_marginTop="0dp"
                     android:layout_marginEnd="0dp"
                     android:layout_marginBottom="0dp"
                     android:scrollingCache="true" />

                 <LinearLayout
                     android:id="@+id/locationon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentBottom="true"
                     android:layout_marginEnd="58dp"
                     android:layout_marginBottom="43dp"
                     android:orientation="vertical"
                     android:padding="5dp">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/poppins_bold"
                         android:text="Trun ON Location  And Refresh"
                         android:textColor="?attr/textcolour"
                         android:textSize="18sp"
                         android:textStyle="bold" />

                     <Button
                         android:id="@+id/locationonbtn"
                         android:layout_width="130dp"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginTop="@dimen/_27sdp"
                         android:layout_marginBottom="@dimen/_27sdp"
                         android:background="@drawable/btn_rounded_yellow_white"
                         android:backgroundTint="@color/green_A400"
                         android:fontFamily="@font/poppins_semibold"
                         android:text="ON"
                         android:textColor="@color/white"
                         android:textSize="20sp"
                         android:textStyle="bold" />
                 </LinearLayout>
             </RelativeLayout>




            <LinearLayout
                android:id="@+id/current_location_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Popular"
                    android:textColor="?attr/textcolour"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="?attr/textcolour"
                        android:text="Choose your top genres from below list"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/nearestviewall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/colorAccent"
                        android:text="View All"
                        android:textStyle="bold"
                        android:textSize="10sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/nearest_shimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?attr/backgroundColorApp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        shimmer:duration="800">

                        <!-- Adding 3 rows of placeholders -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/shimer_nearest" />
                            <include layout="@layout/shimer_nearest" />
                            <include layout="@layout/shimer_nearest" />

                            <!--                                <include layout="@layout/shimer" />-->






                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/nearest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollingCache="true" />



                </RelativeLayout>


             </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:layout_marginTop="12dp"
                 android:layout_marginBottom="12dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:padding="12dp"
                 android:weightSum="3">

                 <LinearLayout
                      android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center"
                     android:layout_weight="1"
                      android:orientation="horizontal"
                     android:padding="8dp">

                     <com.airbnb.lottie.LottieAnimationView
                         android:layout_width="122dp"
                         android:layout_height="101dp"

                         app:lottie_autoPlay="true"
                         app:lottie_fileName="find.json"
                         app:lottie_loop="true" />


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginStart="4dp"
                         android:layout_marginTop="8dp"
                         android:layout_marginEnd="4dp"
                         android:layout_marginBottom="4dp"
                         android:fontFamily="@font/poppins_semibold"
                         android:text="Find Budget Free Hostel"
                         android:textColor="?attr/textcolour"
                         android:textSize="14sp" />


                     <ImageView
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:layout_gravity="center"
                         android:src="@drawable/dobel_arrows"
                         app:tint="?attr/textcolour" />

                 </LinearLayout>


             </LinearLayout>






        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>













